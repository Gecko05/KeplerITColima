#include <Luz.h>
int16 luzAdc;
void main()
{
   setup_adc_ports(AN0);
   setup_adc(ADC_CLOCK_DIV_2);
   setup_timer_2(T2_DIV_BY_4,249,1);      //1.0 ms overflow, 1.0 ms interrupt

   setup_ccp1(CCP_PWM);
   set_pwm1_duty((int16)100);

   while(TRUE)
   {
      //TODO: User Code
      luzAdc = read_adc();
      set_pwm1_duty((int16)luzAdc);
   }

}
